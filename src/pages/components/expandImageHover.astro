<SecondaryLayout 
    title="Expand Image on Hover"
    htmlLinkHref="https://github.com/jpeerson108/designCanon/blob/main/src/pages/components/expandImageHover.astro"
    cssLinkHref="https://github.com/jpeerson108/designCanon/blob/main/src/styles/components/expandImageHover.css"
